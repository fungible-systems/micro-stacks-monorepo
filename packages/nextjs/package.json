{
  "name": "@micro-stacks/nextjs",
  "private": false,
  "version": "0.0.6",
  "description": "Opinionated next.js integration for micro-stacks.",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "main": "./dist/index.js",
      "module": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js",
      "main": "./dist/*.js",
      "module": "./dist/*.js",
      "import": "./dist/*.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "shx rm -rf ./dist && rollup -c ./rollup.config.js",
    "typecheck": "tsc --noEmit --target esnext",
    "dev:publish": "yalc publish --push",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx}\" *.js",
    "lint:prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": "@stacks/prettier-config",
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aulneau/micro-stacks.git"
  },
  "keywords": [
    "stacks",
    "web3",
    "small-bundle"
  ],
  "author": "Thomas Osmonson",
  "contributors": [],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/fungible-systems/micro-stacks-react/issues"
  },
  "homepage": "https://github.com/fungible-systems/micro-stacks",
  "devDependencies": {
    "@stacks/stacks-blockchain-api-types": "0.70.0",
    "@types/react": "17.0.31",
    "@types/react-dom": "17.0.10"
  },
  "dependencies": {
    "@micro-stacks/query": "workspace:*",
    "@micro-stacks/react": "workspace:*",
    "jotai": "latest",
    "jotai-query-toolkit": "latest",
    "next": "latest",
    "nookies": "latest",
    "micro-stacks": "latest"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
